{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noEmit": true,
    "noImplicitReturns": true
  }
}


